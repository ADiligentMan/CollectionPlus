<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="mView"
            type="com.example.acer.collectionplus.View.IAddView"/>
        <variable
            name="data"
            type="com.example.acer.collectionplus.ViewModel.AddVM.DataToShow"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <com.example.acer.collectionplus.CustomView.TitleBar
            android:id="@+id/titlebar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <android.support.constraint.Guideline
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="50dp" />

        <android.support.constraint.Guideline
            android:id="@+id/line3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="50dp" />

        <android.support.constraint.Guideline
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="60dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@id/line1"
            app:layout_constraintTop_toBottomOf="@id/line2" />

        <EditText
            android:id="@+id/et_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext"
            android:inputType="text"
            android:padding="15dp"
            android:paddingLeft="10dp"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@id/line1"
            app:layout_constraintRight_toLeftOf="@+id/line3"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:text="@{data.title}"
            tools:text="wangepng" />

        <TextView
            android:id="@+id/tv_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="分类"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@id/line1"
            app:layout_constraintTop_toBottomOf="@id/et_title" />
        
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_class"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_class"/>
        
        <Button
            android:id="@+id/btn_finish"
            android:layout_width="271dp"
            android:layout_height="50dp"
            android:text="完成"
            android:onClick="@{()->mView.onClickFinish()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.9"/>


    </android.support.constraint.ConstraintLayout>
</layout>