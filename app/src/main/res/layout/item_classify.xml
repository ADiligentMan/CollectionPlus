<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="classAdapter"
            type="com.example.acer.collectionplus.Adapter.ClassAdapter"/>
        <variable
            name="position"
            type="int"/>
        <variable
            name="simpleDirBean"
            type="com.example.acer.collectionplus.JavaBean.SimpleDirBean"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@{simpleDirBean.isClicked? @drawable/bg_classify:@drawable/bg_classify2}"
            android:layout_gravity="center"
            android:onClick="@{()->classAdapter.onClickClass(position)}"
            android:gravity="center"
            android:text="@{simpleDirBean.dirname}"
            tools:text="分类"
            android:textSize="15dp"
            android:textStyle="bold" />
    </android.support.constraint.ConstraintLayout>
</layout>