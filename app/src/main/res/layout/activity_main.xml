<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.MainActivity">
        <!--Toolbar-->
        <include layout="@layout/custom_toolbar" />

        <!--中间的-->
        <FrameLayout
            android:id="@+id/container_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></FrameLayout>

        <!-- 底部导航栏 -->
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/bottom_home"
                style="@style/CustomRadioBtn"
                android:drawableTop="@drawable/radiobtn_home"
                android:text="收藏" />

            <RadioButton
                android:id="@+id/bottom_find"
                style="@style/CustomRadioBtn"
                android:drawableTop="@drawable/radiobtn_find"
                android:text="发现" />

            <RadioButton
                android:id="@+id/bottom_link"
                style="@style/CustomRadioBtn"
                android:drawableTop="@drawable/radiobtn_like"
                android:text="关注" />

            <RadioButton
                android:id="@+id/bottom_mime"
                style="@style/CustomRadioBtn"
                android:drawableTop="@drawable/radiobtn_mine"
                android:text="我的" />
        </RadioGroup>
    </LinearLayout>
</layout>